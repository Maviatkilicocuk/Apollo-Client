# üë§ USER MUTATIONS

# Create User
mutation CreateUser {
  createUser(data: {
    username: "Strawberry6",
    email: "strawberry6@gmail.com"
  }) {
    id
    username
  }
}

# Update User
mutation UpdateUser {
  updateUser(id: "1", data: {
    username: "UpdatedStrawberry6",
    email: "updated6@gmail.com"
  }) {
    id
    username
  }
}

# Delete User
mutation DeleteUser {
  deleteUser(id: "1") {
    id
    username
  }
}

# Delete All Users
mutation DeleteAllUsers {
  deleteAllUsers {
    count
  }
}


