# Create Participant
mutation CreateParticipant {
  createParticipant(data: {
    user_id: "1",
    event_id: "1"
  }) {
    id
    user {
      username
    }
    event {
      title
    }
  }
}

# Update Participant
mutation UpdateParticipant {
  updateParticipant(id: "1", data: {
    user_id: "1",
    event_id: "1"
  }) {
    id
    user {
      username
    }
    event {
      title
    }
  }
}

# Delete Participant
